<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">#795548</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/my_main_button_text_size</item>
    </style>

    <style name="RoundedButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/boton_redondo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
"

</resources>
